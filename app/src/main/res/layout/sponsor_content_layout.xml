<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/sponsor_content_container"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="130dp"
            android:layout_height="170dp"
            android:layout_marginRight="10dp">
            <ImageView
                android:id="@+id/sponsor_logo"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/sponsor_discount"
                android:layout_width="130dp"
                android:layout_height="30dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="180dp"
            android:layout_height="200dp">
            <TextView
                android:id="@+id/sponsor_name"
                android:gravity="center_vertical|left"
                android:layout_width="180dp"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/sponsor_address"
                android:gravity="center_vertical|left"
                android:layout_width="180dp"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/sponsor_hours"
                android:gravity="center_vertical|left"
                android:layout_width="180dp"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/sponsor_phone_number"
                android:gravity="center_vertical|left"
                android:layout_width="180dp"
                android:layout_height="30dp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/sponsor_description"
        android:maxLines = "50"
        android:scrollbars = "vertical"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="15dp"/>
    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/sponsor_location"
        android:layout_width="250dp"
        android:layout_height="50dp" />

</LinearLayout>